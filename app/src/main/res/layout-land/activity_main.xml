<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:textSize="20dp"
        android:inputType="number"
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:padding="14dp"
        android:textSize="15dp"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_sun"
        app:layout_constraintLeft_toRightOf="@id/input"
        app:layout_constraintRight_toLeftOf="@id/displaySun"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        />

    <TextView
        android:id="@+id/displaySun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="There will be sun!"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/button"
        app:layout_constraintRight_toLeftOf="@id/check"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:contentDescription="Sun in next 5 days"
        android:id="@+id/check"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@id/displaySun"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/whenSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="At Tues, 3:00 PM"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/button"
        app:layout_constraintRight_toLeftOf="@id/check"
        app:layout_constraintTop_toBottomOf="@+id/displaySun"
        app:layout_constraintHorizontal_bias=".13" />

    <android.support.constraint.Group
        android:id="@+id/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="displaySun, check, whenSun"
        android:visibility="invisible"/>

    <ListView
        android:layout_marginTop="15dp"
        android:id="@+id/displayWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whenSun" />

</android.support.constraint.ConstraintLayout>